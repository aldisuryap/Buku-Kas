<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_item_cash_flow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:strokeWidth="2dp"
    app:cardCornerRadius="@dimen/space_16"
    app:cardElevation="@dimen/space_8"
    android:layout_margin="@dimen/space_8"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ic_status_item_cash_flow"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="@dimen/space_16"
            android:layout_marginEnd="@dimen/space_8"
            android:layout_marginBottom="@dimen/space_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_expanse" />

        <TextView
            android:id="@+id/tv_amount_item_cash_flow"
            style="@style/TextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginStart="@dimen/space_8"
            android:layout_marginEnd="@dimen/space_8"
            android:text="Rp. 25000"
            app:layout_constraintEnd_toStartOf="@+id/ic_status_item_cash_flow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_description_item_cash_flow"
            style="@style/TextContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dummy Description"
            app:layout_constraintEnd_toEndOf="@+id/tv_amount_item_cash_flow"
            app:layout_constraintStart_toStartOf="@+id/tv_amount_item_cash_flow"
            app:layout_constraintTop_toBottomOf="@+id/tv_amount_item_cash_flow" />

        <TextView
            android:id="@+id/tv_date_item_cash_flow"
            style="@style/TextContentSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_8"
            android:text="21 Oct 2021"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tv_description_item_cash_flow"
            app:layout_constraintStart_toStartOf="@+id/tv_description_item_cash_flow"
            app:layout_constraintTop_toBottomOf="@+id/tv_description_item_cash_flow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>